{
    "compilerOptions": {
        "outDir":             "./dist/js",
        "allowJs":            true,
        "target":             "es5",
        "strict":             true,
        "noUnusedLocals":     true,
        "noUnusedParameters": true,
        "module":             "commonjs",
        "moduleResolution":   "node"
    },
    "include":         [
        "./src/**/*"
    ]
}